{
  "kind": "singleType",
  "collectionName": "homes",
  "info": {
    "name": "Home"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "meta.seo"
    },
    "subheading": {
      "type": "string",
      "required": false
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "sections.images-slider",
        "sections.large-media",
        "sections.rich-text"
      ]
    },
    "selfie": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
